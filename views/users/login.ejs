<% layout('layouts/boilerplate')%>

<div class="card col-md-6 mx-auto my-5">
  <div class="card-header">
    <h3>Login</h3>
  </div>
  <form action="/login" method="POST" class="requires-validation" novalidate>
    <div class="p-3">
      <div class="mb-3">
        <label class="form-label" for="username">Username</label>
        <input
          class="form-control"
          type="text"
          id="username"
          name="username"
          required
        />
      </div>

      <div class="mb-3">
        <label class="form-label" for="password">Password</label>
        <input
          class="form-control"
          type="password"
          id="password"
          name="password"
          required
        />
      </div>
      <button
        class="btn mt-3"
        style="background-color: rgb(84, 211, 107); font-weight: 600"
      >
        Login
      </button>
    </div>
  </form>
</div>
